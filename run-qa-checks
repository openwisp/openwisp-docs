#!/bin/bash

set -e

# openwisp-utils checks
#This is done first to ignore build directories for openwisp-utils checks
openwisp-qa-check \
    --skip-checkmigrations \
    --skip-checkmakemigrations\
    --skip-isort \
    --skip-flake8 \
    --skip-black \
    --skip-checkrst

./check_line_length.py

echo ''
echo 'Checking documentation build status'
make build_html

